{
  "name": "NoteX",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "note x",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png" ,
    "default_title": "NoteX",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["mystyles.css", "font.css"],
      "js": ["page.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "*://*.baidu.com/",
    "https://cdn.auth0.com/",
    "contextMenus"
  ],
  "content_security_policy": "script-src 'self' https://cdn.auth0.com/; object-src 'self'",
  "icons": {
    "16": "icon.png"
  }
}
